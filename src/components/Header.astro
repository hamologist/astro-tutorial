---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
---
<style>
</style>

<script>
  import type { NavHeaderElement, NavHamburgerElement, NavLinksElement } from '../scripts/nav';

  class NavHeader extends HTMLElement implements NavHeaderElement {
    constructor() {
      super();

      const navHamburger = this.querySelector<NavHamburgerElement>('nav-hamburger');
      const navLinks = this.querySelector<NavLinksElement>('nav-links');
      if (navHamburger !== null && navLinks !== null) {
        navHamburger.addEventListener('click', () => {
          navLinks.toggle();
        });
      }
    }
  }
  customElements.define('nav-header', NavHeader);
</script>

<nav-header>
  <Hamburger />
  <Navigation />
</nav-header>
